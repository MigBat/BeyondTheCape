	# settler pool send colonist
	FROM = {
		country_event = {
			id = btc_settler_pool.2
		}
	}
	# remove dev from state primary culture province and give to colony. only for non-minority expel
	if = {
		limit = {
			province_getting_expelled_minority = no
		}
		FROM = {
			country_event = {
				id = btc_settler_pool.3
			}
		}
	}
	# give malaria
	if = {
		limit = {
			FROM = {
				capital_scope = {
					NOT = { continent = africa }
				}
			}
			has_port = no
			continent = africa
			NOT = {
				OR = {
					region = maghreb_region
					region = egypt_region
					region = south_africa_region
					# Madagascar
					area = sakalava_area
					area = betsimasaraka_area
					area = southern_madagascar
					area = madagascar_highlands_area
					if = {
						limit = {
							mission_completed = btc_slaves
						}
						area = inner_angola_area
						area = matamba_area
					}
					if = {
						limit = {
							mission_completed = btc_sofala
						}
						area = lower_zambezi_area
					}
				}
			}
		}
		add_province_modifier = {
			name = malaria
			duration = -1
		}
	}
}

